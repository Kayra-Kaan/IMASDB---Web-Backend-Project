@model Show

<form method="post">
    <input asp-for="ShowId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-dark">Delete Show</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="ShowName" class="p-0"></label>
            <input asp-for="ShowName" disabled class="form-control" />
            <span asp-validation-for="ShowName" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="SeasonCount" class="p-0"></label>
            <input asp-for="SeasonCount" disabled class="form-control" />
            <span asp-validation-for="SeasonCount" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="EpisodeCount" class="p-0"></label>
            <input asp-for="EpisodeCount" disabled class="form-control" />
            <span asp-validation-for="EpisodeCount" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Show" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Go Back
                </a>
            </div>
        </div>



    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
