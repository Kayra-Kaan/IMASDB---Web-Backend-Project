@model Movie

<form method="post">
    <input asp-for="MovieId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-dark">Delete Movie</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="MovieName" class="p-0"></label>
            <input asp-for="MovieName" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Duration" class="p-0"></label>
            <input asp-for="Duration" disabled class="form-control" />
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Movie" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Go Back
                </a>
            </div>
        </div>



    </div>
</form>


